{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/svelte-NET-Test.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/svelte-NET-Test.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/svelte-NET-Test.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "compose: start observability",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                ".devcontainer/docker-compose.yml",
                "up",
                "-d",
                "db",
                "loki",
                "promtail",
                "grafana",
                "jaeger",
                "web"
            ],
            "problemMatcher": []
        },
        {
            "label": "compose: stop api",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                ".devcontainer/docker-compose.yml",
                "stop",
                "api"
            ],
            "problemMatcher": []
        },
        {
            "label": "compose: start api",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                ".devcontainer/docker-compose.yml",
                "up",
                "-d",
                "api"
            ],
            "problemMatcher": []
        },
        {
            "label": "stack: prepare",
            "dependsOrder": "sequence",
            "dependsOn": [
                "compose: start observability",
                "compose: stop api"
            ]
        },
        {
            "label": "compose: stop observability",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                ".devcontainer/docker-compose.yml",
                "stop",
                "web",
                "api",
                "grafana",
                "loki",
                "jaeger",
                "db"
            ],
            "problemMatcher": []
        },
        {
            "label": "compose: down observability",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                ".devcontainer/docker-compose.yml",
                "down"
            ],
            "problemMatcher": []
        }
    ]
}